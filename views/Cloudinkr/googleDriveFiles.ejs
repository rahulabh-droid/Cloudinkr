<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Google Drive Files</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        #bgVideo {
            position: fixed;
            top: 0;
            left: 0;
            min-width: 100%;
            min-height: 100%;
            z-index: -1;
            object-fit: cover;
            filter: brightness(0.6);
        }

        .card {
            background: rgba(255, 255, 255, 0.15);
            /* semi-transparent */
            backdrop-filter: blur(10px);
            /* glass blur effect */
            -webkit-backdrop-filter: blur(10px);
            /* Safari support */
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            color: #fff;
            /* makes text visible over background */
            transition: transform 0.2s;
        }

        .card:hover {
            transform: scale(1.03);
            /* subtle hover effect */
        }

        .card h5,
        .card p {
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
            /* improves readability */
        }
        h2{
            display: flex;
            justify-content: center;
            padding: 10px;
            color: blanchedalmond;
        }
    </style>
</head>

<body>
    <video autoplay muted loop id="bgVideo">
        <source src="/video/video2.mp4" type="video/mp4" />
        Your browser does not support the video tag.
    </video>
    <div class="container mt-4">
        <h2>My Google Drive Files</h2>
        <div id="loader" style="display: none; text-align: center; margin: 20px 0;">
            <img src="/images/loading1.gif" alt="Loading..." width="80" />
            <p>Importing file, please wait...</p>
        </div>
        <div class="row">
            <% if (files.length===0) { %>
                <p>No files found.</p>
                <% } else { %>
                    <% files.forEach(file=> { %>
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= file.name %>
                                    </h5>
                                    <p class="card-text">
                                        <%= file.mimeType %>
                                    </p>
                                    <a href="<%= file.webViewLink %>" target="_blank"
                                        class="btn btn-primary btn-sm mb-1">View</a>
                                    <form class="import-form" data-file-id="<%= file.id %>"
                                        data-access-token="<%= accessToken %>" style="display:inline;">
                                        <button type="submit" class="btn btn-success btn-sm">Import</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
        </div>
    </div>

    <script>
        const loader = document.getElementById('loader');

        document.querySelectorAll('.import-form').forEach(form => {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();

                const fileId = form.dataset.fileId;
                const accessToken = form.dataset.accessToken;

                loader.style.display = 'block'; // Show loader

                try {
                    const res = await fetch('/api/google/import', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        credentials: 'include',
                        body: JSON.stringify({ fileId, accessToken })
                    });

                    loader.style.display = 'none'; // Hide loader

                    if (res.ok) {
                        const text = await res.text();
                        alert('File imported successfully!');
                        console.log(text);
                    } else {
                        const error = await res.text();
                        alert('Import failed: ' + error);
                    }
                } catch (err) {
                    loader.style.display = 'none'; // Hide loader on error
                    console.error(err);
                    alert('An error occurred during import.');
                }
            });
        });
    </script>

</body>

</html>